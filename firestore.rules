rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      // Only the authenticated owner can read their document
      allow read: if request.auth != null && request.auth.uid == uid;

      // Allow create for first sign-in — no protected fields
      allow create: if request.auth != null
                    && request.auth.uid == uid
                    && !request.resource.data.keys()
                        .hasAny(['subscriptionTier', 'isPremium', 'dailyMessageCount']);

      // Allow update for own document — cannot touch protected fields
      allow update: if request.auth != null
                    && request.auth.uid == uid
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['subscriptionTier', 'isPremium', 'dailyMessageCount']);

      // Allow delete for own document (account deletion)
      allow delete: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
